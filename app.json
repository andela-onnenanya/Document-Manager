{
  "name": "document-manager",
  "scripts": {
    "postdeploy": "pg_dump $STAGING_DATABASE_URL | psql $DATABASE_URL && bundle exec rake db:migrate"
  },
  "env": {
    "STAGING_DATABASE_URL": {
      "required": true
    },
    "ADMIN_EMAIL": {
      "required": true
    },
    "ADMIN_FIRST_NAME": {
      "required": true
    },
    "ADMIN_LAST_NAME": {
      "required": true
    },
    "ADMIN_PASSWORD": {
      "required": true
    },
    "JWT_SECRETE": {
      "required": true
    },
    "NPM_CONFIG_PRODUCTION": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
